<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CircuitSimulator.Views"
    xmlns:WPFHelloWorld="clr-namespace:WPFHelloWorld" 
    x:Class="CircuitSimulator.Views.BaseComponentView"
    mc:Ignorable="d" 
    d:DesignHeight="1000" d:DesignWidth="1000">
    <Canvas x:Name="Canvas" MouseMove="Component_MouseMove" DragLeave="Component_DragLeave" MouseRightButtonDown="Component_OnMouseRightButtonDown">
        <Canvas.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Edit" />
                <MenuItem Header="Delete" />
                <Separator />
                <MenuItem Header="Flip" />
                <MenuItem Header="Rotate" />
            </ContextMenu>
        </Canvas.ContextMenu>

        <Ellipse Canvas.Left="5" Canvas.Top="-10" Height="10" Stroke="Black" Width="10" Cursor="Pen" StrokeThickness="5" MouseDown="EllipsePos_MouseDown"/>
        <Rectangle x:Name="Rectangle" Height="40" Width="20" Fill="DimGray">
        </Rectangle>
        <Ellipse Canvas.Left="5" Canvas.Top="40" Height="10" Stroke="Black" Width="10" Cursor="Pen" StrokeThickness="5" MouseDown="EllipseNeg_MouseDown"/>
    </Canvas>

</UserControl>